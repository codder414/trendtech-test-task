{
    "restartable": "rs",
    "verbose": true,
    "execMap": {
        "ts": "node -r ts-node/register"
    },
    "watch": [
        "src/"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts,gql",
    "args": [
        "--nolazy"
    ],
    "ignore": ["*.test.ts", "src/__tests__"]
}